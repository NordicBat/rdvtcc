<%- model_class = Meal -%>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
	<dt>
		<strong><%= model_class.human_attribute_name(:date) %>:</strong>
	</dt>
	<dd>
		<%= @meal.date %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:kind) %>:</strong>
	</dt>
	<dd>
		<%= @meal.kind %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:total) %>:</strong>
	</dt>
	<dd>
		<%= @meal.total %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:travel_id) %>:</strong>
	</dt>
	<dd>
		<%= @meal.travel_id %>
	</dd>
	<dt><strong><%= model_class.human_attribute_name(:image) %>:</strong><%= image_tag @meal.image.thumb.url %></dt>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
travel_path(@travel), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
edit_travel_meal_path(@travel, @meal), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
[@travel, @meal],
:method => 'delete',
:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
:class => 'btn btn-danger' %>
