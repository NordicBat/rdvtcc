<% - model_class = Meal -%>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th><%= model_class.human_attribute_name(:id) %></th>
			<th><%= model_class.human_attribute_name(:date) %></th>
			<th><%= model_class.human_attribute_name(:kind) %></th>
			<th><%= model_class.human_attribute_name(:total) %></th>
			<th><%= model_class.human_attribute_name(:travel_id) %></th>
			<th><%= t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	</thead>
	<tbody>
		<% @meals.each do |meal| %>
		<tr>
			<td><%= link_to meal.id, travel_meal_path(@travel, meal) %></td>
			<td><%= meal.date %></td>
			<td><%= meal.kind %></td>
			<td><%= meal.total %></td>
			<td><%= meal.travel_id %></td>
			<td> <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_travel_meal_path(@travel, meal), :class => 'btn btn-default btn-xs' %>
			<%= link_to t('.destroy', :default => t("helpers.links.destroy")), [@travel, meal], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			:class => 'btn btn-xs btn-danger' %> </td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
new_travel_meal_path(@travel),
:class => 'btn btn-primary' %>
