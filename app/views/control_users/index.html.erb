<%- model_class = User -%>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Email</th>
			<th>Papel</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.email %></td>
			<td><%= user.role %></td>
		</tr>
		<% end %>
	</tbody>
</table>