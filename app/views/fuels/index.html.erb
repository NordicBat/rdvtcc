<%- model_class = Fuel -%>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th><%= model_class.human_attribute_name(:id) %></th>
			<th><%= model_class.human_attribute_name(:date) %></th>
			<th><%= model_class.human_attribute_name(:total) %></th>
			<th><%= model_class.human_attribute_name(:odometer) %></th>
			<th><%= model_class.human_attribute_name(:travel_id) %></th>
			<th><%= t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	</thead>
	<tbody>
		<% @fuels.each do |fuel| %>
		<tr>
			<td><%= link_to fuel.id, travel_fuel_path(@travel, fuel) %></td>
			<td><%= fuel.date %></td>
			<td><%= fuel.total %></td>
			<td><%= fuel.odometer %></td>
			<td><%= fuel.travel_id %></td>
			<td> <%= link_to t('.edit', :default => t("helpers.links.edit")),
			edit_travel_fuel_path(@travel, fuel), :class => 'btn btn-default btn-xs' %>
			<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			[@travel, fuel],
			:method => :delete,
			:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			:class => 'btn btn-xs btn-danger' %> </td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
new_travel_fuel_path(@travel),
:class => 'btn btn-primary' %>
