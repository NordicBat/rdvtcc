<%= form_for @vehicle, :html => { :class => "form-horizontal vehicle" } do |f| %>

  <% if @vehicle.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @vehicle.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :brand, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :brand, :class => 'form-control' %>
    </div>
    <%=f.error_span(:brand) %>
  </div>
  <div class="form-group">
    <%= f.label :model, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :model, :class => 'form-control' %>
    </div>
    <%=f.error_span(:model) %>
  </div>
  <div class="form-group">
    <%= f.label :year, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :year, :class => 'form-control' %>
    </div>
    <%=f.error_span(:year) %>
  </div>
  <div class="form-group">
    <%= f.label :licencePlate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :licencePlate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:licencePlate) %>
  </div>
  <div class="form-group">
    <%= f.label :odometerActual, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :odometerActual, :class => 'form-control' %>
    </div>
    <%=f.error_span(:odometerActual) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vehicles_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
