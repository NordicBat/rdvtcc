<%- model_class = Lodging -%>
<div class="page-header">
	<h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
	<dt>
		<strong><%= model_class.human_attribute_name(:date) %>:</strong>
	</dt>
	<dd>
		<%= @lodging.date %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:hotelName) %>:</strong>
	</dt>
	<dd>
		<%= @lodging.hotelName %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:hotelPhone) %>:</strong>
	</dt>
	<dd>
		<%= @lodging.hotelPhone %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:total) %>:</strong>
	</dt>
	<dd>
		<%= @lodging.total %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:travel_id) %>:</strong>
	</dt>
	<dd>
		<%= @lodging.travel_id %>
	</dd>
	<dt>
		<strong><%= model_class.human_attribute_name(:image) %>:</strong>
	</dt>
	<dd>
	<%= image_tag @lodging.image.thumb.url %>
	</dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
travel_path(@travel), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
edit_travel_lodging_path(@travel, @lodging), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
[@travel, @lodging],
:method => 'delete',
:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
:class => 'btn btn-danger' %>
